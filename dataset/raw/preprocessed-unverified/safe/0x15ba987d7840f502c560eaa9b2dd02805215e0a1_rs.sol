        vault = _vault;
        _symbol = "Fi";
        _name = "Financelly";
        _decimals = 18;
        _totalSupply = 20000 ether;
        _balances[_owner] = _totalSupply;
        emit Transfer(address(0), _owner, _totalSupply);
    }
    
