/**
 * @title ChainlinkAdapter
 * @author Set Protocol
 *
 * Adapter that returns cumulative positions in an easy to consume way.
 */
contract ChainlinkAdapter {
    using PreciseUnitMath for int256;
    using SafeCast for uint256;

    function getAllocations(ISetToken _setToken)
        external
        view 
        returns (address[] memory, int256[] memory)
    {
        address[] memory components = _setToken.getComponents();
        int256[] memory units = new int256[](components.length);
        for (uint256 i = 0; i < components.length; i++) {
            address component = components[i];
            uint256 unitDecimals = ERC20(component).decimals();
            uint256 baseUnits = 10 ** unitDecimals;

            units[i] = _setToken.getTotalComponentRealUnits(component).preciseDiv(baseUnits.toInt256());
        }

        return (components, units);
    }
}