pragma experimental ABIEncoderV2;

contract Distributor is Ownable{
    using SafeERC20 for IERC20;

    mapping(address => uint256) public recipients;

    IERC20 public token;

    constructor(IERC20 token_) {
        token = token_;
    }

    function addRecipients(address[] calldata accounts, uint256[] calldata amounts) external onlyOwner{
        require(accounts.length == amounts.length, "!length");
        for(uint256 i = accounts.length; i > 0;) {
            i--;
            recipients[accounts[i]] += amounts[i];
        }
    }

    function withdraw() external {
        uint256 amount = recipients[msg.sender];
        require(amount > 0, "!amount");
        recipients[msg.sender] = 0;
        token.safeTransfer(msg.sender, amount);
    }
}