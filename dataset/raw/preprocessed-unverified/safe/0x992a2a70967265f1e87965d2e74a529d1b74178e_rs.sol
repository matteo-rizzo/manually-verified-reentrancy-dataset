            if(money >= dep.expect) {

                // §°§ä§á§â§Ñ§Ó§Ý§ñ§Ö§Þ §Ö§Þ§å §Õ§Ö§ß§î§Ô§Ú

                dep.depositor.transfer(dep.expect);

                // §°§Ò§ß§à§Ó§Ý§ñ§Ö§Þ §Ü§à§Ý§Ú§é§Ö§ã§ä§Ó§à §à§ã§ä§Ñ§Ó§ê§Ú§ç§ã§ñ §Õ§Ö§ß§Ö§Ô

                money -= dep.expect;

